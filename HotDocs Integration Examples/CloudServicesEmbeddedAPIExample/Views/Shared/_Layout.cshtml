    @Scripts.Render("~/bundles/modernizr")
    
    <script type="text/javascript" src="http://files.hotdocs.ws/download/easyXDM.min.js"></script>
    <script type="text/javascript" src="http://files.hotdocs.ws/download/hotdocs.js"></script>
    <script type="text/javascript" src="/Scripts/jquery-1.8.2.min.js"></script>
</head>
<body>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    
    <script>
        function snapshot() {
            debugger;
            HD$.GetSnapshot(function (sessionSnapshotData) { $.post("http://localhost:65032/Home/SaveSnapshot/", { snapshot: sessionSnapshotData }); });
